<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Cliente"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Conductor"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerConductores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Vehiculo"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerVehiculos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de MercancÃ­a"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerMercancias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAsignarFlete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Flete"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
